{% extends "base.html.twig" %}
{% block body %}
    <section>
        <p>
            You can find the <mark>Token</mark> in your URL when you are playing a GeoGuessr Game
            </br>
            <code>
                https://www.geoguessr.com/game/<mark>y0uRT0k3n</mark>
            </code>
        </p>
    </section>
    <section>
        <p>
            {{form(form)}}
        </p>
    </section>
    <hr>
    <section>
        <table>
            <tr>
                <th>Nickname</th>
                <th>GeoGuessrId</th>
            </tr>
            {% for player in players %}
                <tr>
                    <td><a href="{{ path('player_detail', {id: player.geoGuessId}) }}">{{player.nickname}}</a></td>
                    <td><a href="{{ path('player_detail', {id: player.geoGuessId}) }}">{{player.geoGuessId}}</a></td>
                </tr>
            {% endfor %}
        </table>
    </section>
{% endblock %}
